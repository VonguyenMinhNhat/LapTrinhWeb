@model VoNguyenMinhNhat_LTWEB_buoi3.Models.Category

<div class="container mt-4">
    <h2 class="text-center mb-4">Xóa Danh Mục</h2>
    <div class="card shadow-sm p-4 rounded">
        <p class="text-danger fw-bold">Bạn có chắc chắn muốn xóa danh mục <strong>@Model.Name</strong> không?</p>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger px-4">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Hủy</a>
        </form>
    </div>
</div>


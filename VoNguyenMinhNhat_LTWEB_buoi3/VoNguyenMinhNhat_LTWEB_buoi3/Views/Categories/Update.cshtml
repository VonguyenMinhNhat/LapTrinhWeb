@model VoNguyenMinhNhat_LTWEB_buoi3.Models.Category

<div class="container mt-4">
    <h2 class="text-center mb-4">Cập Nhật Danh Mục</h2>
    <div class="card shadow-sm p-4 rounded">
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Tên danh mục:</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-warning px-4">Cập nhật</button>
                <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Quay lại</a>
            </div>
        </form>
    </div>
</div>

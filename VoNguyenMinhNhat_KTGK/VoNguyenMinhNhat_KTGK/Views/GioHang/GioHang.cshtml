@model List<VoNguyenMinhNhat_KTGK.Models.HocPhan>
@{
    ViewData["Title"] = "Đăng Kí Học Phần";
    int soLuong = ViewBag.SoLuong ?? 0;
    int tongTinChi = ViewBag.TongTinChi ?? 0;
}

<h2 class="text-center">Đăng Kí Học Phần</h2>

@if (!Model.Any())
{
    <p class="text-danger">Số học phần: 0</p>
    <p class="text-danger">Tổng số tín chỉ: 0</p>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Mã HP</th>
                <th>Tên Học Phần</th>
                <th>Số Chỉ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hp in Model)
            {
                <tr>
                    <td>@hp.MaHP</td>
                    <td>@hp.TenHP</td>
                    <td>@hp.SoTinChi</td>
                    <td>
                        <a asp-controller="GioHang" asp-action="Xoa" asp-route-maHP="@hp.MaHP" class="text-danger">Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p class="text-danger">Số học phần: @soLuong</p>
    <p class="text-danger">Tổng số tín chỉ: @tongTinChi</p>
}

<div class="d-flex justify-content-between mt-3">
    <a asp-controller="GioHang" asp-action="XoaTatCa" class="btn btn-outline-danger">🗑️ Xoá Đăng Kí</a>
    <a asp-controller="GioHang" asp-action="DatHang" class="btn btn-success">💾 Lưu đăng ký</a>
</div>

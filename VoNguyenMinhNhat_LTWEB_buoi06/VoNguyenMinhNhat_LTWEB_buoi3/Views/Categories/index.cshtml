@model IEnumerable<VoNguyenMinhNhat_LTWEB_buoi3.Models.Category>

<div class="container mt-4">
    <h2 class="text-center mb-4">Danh Sách Danh Mục</h2>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên danh mục</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        @if(User.IsInRole("Admin"))
                        {
                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Sửa danh mục</a>
                            <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Xóa danh mục</button>
                            </form>
                                <a asp-action="Add" class="btn btn-success">Thêm danh mục</a>
                        
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</div>


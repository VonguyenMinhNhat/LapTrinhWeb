@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link fw-semibold text-white d-inline-block ms-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Tài khoản">
        <i class="bi bi-person-circle"></i> Hello, @User.Identity?.Name!
    </a>
    <form class="d-inline m-0 p-0 ms-2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" style="display:inline;">
        <button type="submit" class="nav-link btn btn-link fw-semibold text-white px-0" style="text-decoration:none;">
            <i class="bi bi-box-arrow-right"></i> Đăng xuất
        </button>
    </form>
}
else
{
    <a class="nav-link fw-semibold text-white d-inline-block ms-2" asp-area="Identity" asp-page="/Account/Register">
        <i class="bi bi-person-plus"></i> Đăng ký
    </a>
    <a class="nav-link fw-semibold text-white d-inline-block ms-2" asp-area="Identity" asp-page="/Account/Login">
        <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
    </a>
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Bán Hàng</title>
    <!-- Bootstrap 5 and Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VoNguyenMinhNhat_LTWEB_buoi3.styles.css" asp-append-version="true" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: #fff; /* Nền trắng */
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        main {
            flex: 1 0 auto;
        }

        .footer {
            flex-shrink: 0;
        }

        .navbar-brand {
            letter-spacing: 1px;
            font-size: 1.25rem;
        }

        .navbar {
            border-radius: 0 0 1rem 1rem;
        }

        .navbar-dark.bg-primary,
        .navbar-dark.bg-dark {
            background-color: #000 !important; /* Header màu đen */
        }

        .nav-link.active, .nav-link:focus, .nav-link:hover {
            color: #ffd600 !important;
            background: rgba(255,255,255,0.1);
            border-radius: .5rem;
        }
        
        {
            padding-left: 8px;
            padding-right: 8px;
        }

        }

        header .nav-link::before,
        header .nav-item::before {
            content: none !important;
        }

        .navbar-nav .nav-item {
            margin-left: 0.5rem;
            margin-right: 0.5rem;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-0">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop-window fs-3"></i> VoNguyenMinhNhat_LTWEB_buoi3
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-white" asp-area="" asp-controller="Product" asp-action="Index">
                                <i class="bi bi-box-seam"></i> Sản phẩm
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white" asp-area="" asp-controller="Product" asp-action="Add">
                                    <i class="bi bi-plus-circle"></i> Thêm sản phẩm
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-white" asp-controller="Categories" asp-action="Index">
                                <i class="bi bi-tags"></i> Danh mục
                            </a>
                        </li>
                    </ul>
                    
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container py-4 flex-grow-1 d-flex flex-column">
        <main role="main" class="pb-3 flex-grow-1 d-flex flex-column">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer bg-light text-center py-3 shadow-sm">
        <div class="container">
            &copy; 2025 - <span class="fw-bold">VoNguyenMinhNhat_LTWEB_buoi3</span> -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none fw-bold">
                <i class="bi bi-shield-lock"></i> Privacy
            </a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
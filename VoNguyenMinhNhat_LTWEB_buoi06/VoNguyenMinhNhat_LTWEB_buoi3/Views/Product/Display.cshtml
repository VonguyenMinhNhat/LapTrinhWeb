@model VoNguyenMinhNhat_LTWEB_buoi3.Models.Product

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center py-3">
            <h2 class="fw-bold">@Model.Name</h2>
        </div>
        <div class="card-body text-center">
            <div class="row">
                <div class="col-md-6 d-flex align-items-center justify-content-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail shadow-sm" style="max-width: 250px;">
                    }
                </div>
                <div class="col-md-6 text-start">
                    <h3 class="text-success fw-semibold">Giá: @Model.Price.ToString("C")</h3>
                    <p class="text-muted">@Model.Description</p>
                    <p><strong>Loại:</strong> @Model.Category?.Name</p>
                </div>
            </div>
        </div>
        <div class="card-footer text-center py-3">
            @if(User.IsInRole("Admin"))
            {
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning px-4">Chỉnh Sửa</a>
            }
            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Quay lại Danh sách</a>
        </div>
    </div>
</div>
